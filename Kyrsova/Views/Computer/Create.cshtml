@model Computer

@{
    ViewData["Title"] = "Create Computer";
}
<form method="post" asp-action="Create">
    <div class="card">
        <div class="card-header text-center fw-bold bg-primary">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            @* <input type="hidden" asp-for="Id"/> *@
            <div class="form-floating mb-2">
                <input asp-for="Name" class="form-control"/>
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-2">
                <input asp-for="CreatedDate" class="form-control"/>
                <label asp-for="CreatedDate"></label>
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="LastUpdatedDate" class="form-control" />
                <label asp-for="LastUpdatedDate"></label>
                <span asp-validation-for="LastUpdatedDate" class="text-danger"></span>
            </div>
            @* <div class="form-floating mb-2">
                <input asp-for="Image" class="form-control" />
                <label asp-for="Image"></label>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div> *@
            <div class="form-floating mb-2">
                <input asp-for="ComponentComputerId" class="form-control" />
                <label asp-for="ComponentComputerId"></label>
                <span asp-validation-for="ComponentComputerId" class="text-danger"></span>
            </div>
            <div>
                
                <div class="d-grid gap-2   d-md-flex justify-content-md-center">
                    <button type="submit" class="btn btn-success me-md-2 col-3">Create</button>
                    <a asp-controller="Computer" asp-action="Index" class="btn btn-primary col-3">Back</a>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

